# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

#Player Ops
+nocsrf
GET     /tournament/team/player/all                  controllers.PlayerController.all()
POST    /tournament/team/player/add                  controllers.PlayerController.addPlayer()
DELETE  /tournament/team/player/delete/:name         controllers.PlayerController.deletePlayer(name: String)


#Team Ops
+nocsrf
GET     /tournament/team/all                         controllers.TeamController.all()
POST    /tournament/team/add                         controllers.TeamController.addTeam()
DELETE  /tournament/team/delete/:name                controllers.TeamController.deleteTeam(name: String)


#Match Ops
+nocsrf
GET     /tournament/match/all                        controllers.MatchController.all()
POST    /tournament/match/add                        controllers.MatchController.addMatch()
DELETE  /tournament/match/delete/:id                 controllers.MatchController.deleteMatch(id: Long)

#Tournament Ops
+nocsrf
GET     /tournament/all                              controllers.TournamentController.all()
POST    /tournament/add                              controllers.TournamentController.createTournament()
DELETE  /tournament/delete/:name                     controllers.TournamentController.deleteTournament(name: String)
GET     /tournament/matches/:name                        controllers.TournamentController.matchesByTournamentId(name: String)
GET     /tournament/winner/teams/:name                   controllers.TournamentController.getAllWinnersByName(name: String)
GET     /tournament/max-scorer-tournament/:name          controllers.PlayerController.getMaxScorerInTournament(name: String)
GET     /tournament/team/max-score/:name                 controllers.TeamController.getTeamWithMaxScore(name: String)
GET     /tournament/winner/team-with-MaxScorer/:name     controllers.TournamentController.getWinnerWithMaxScorer(name: String)




